{% extends "layouts/base.njk" %}
{% block mainContent %}
  <section class="wrapper intro" role="banner">
    <h1>{{ intro | nl2br | safe }}</h1>
  </section>
  <section class="wrapper blog_feed" role="main">
    <ul class="articles">
      {% for post in collections.posts.slice(0, 3) | reverse %}
        {% include "layouts/partials/blog-article.njk" %}
      {% endfor %}
    </ul>
    <a href="/blog" class="button" aria-label="Blog">To the blog</a>
  </section>
  <section class="wrapper twitter_feed">
    <h2 class="fade">Sometimes I tweet...</h2>
    {% include "layouts/partials/tweets.njk" %}
  </section>
{% endblock %}