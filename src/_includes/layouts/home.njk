{% extends "layouts/base.njk" %}
{% block mainContent %}
  <div class="wrapper intro">
    <h1>{{ intro | nl2br | safe }}</h1>
  </div>
  <div class="wrapper blog_feed">
    <h2>Latest from the blog...</h2>
    <div class="articles">
      {% for post in collections.posts.slice(0, 3) | reverse %}
        {% include "layouts/partials/blog-article.njk" %}
      {% endfor %}
    </div>
    <a href="/blog" class="button" aria-label="Blog">To the blog</a>
  </div>
  <div class="wrapper twitter_feed">
    <h2>Sometimes I tweet...</h2>
    {% include "layouts/partials/tweets.njk" %}
  </div>
{% endblock %}