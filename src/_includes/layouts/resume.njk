{% set bodyClass = "post resume" %}
{% extends "layouts/base.njk" %}
{% block mainContent %}
    <main class="wrapper blog blog__post">
        <article class="post">
            <h1 class="post__title">{{ title }}</h1>
            <div class="post__date">
                <p></p>
            </div>
            <div class="post__content">
                {{ content | safe }}
                <h2 id="experience" tabindex="-1">Experience
                    <a class="header-anchor" href="#experience" aria-label="Link to this section">
                        <i class="icon-link" aria-hidden="true"></i>
                    </a>
                </h2>
                {% for work in resume.work %}
                    <div class="experience">
                        <p class="experience__company pill">
                            <span class="gradient gradient_1">{{ work.company }}</span>
                        </p>
                        {% for experience in work.experience %}
                            <div class="experience__subheading">
                                <p class="experience__role">
                                    <span>{{ experience.position }}</span>
                                </p>
                                <div class="experience__details">
                                    <p class="experience__location">{{ experience.location }}</p>
                                    <p class="experience__date">{{ experience.startDate }} – {{ experience.endDate }}</p>
                                </div>
                            </div>
                            <ul>
                                {% for highlight in experience.highlights %}
                                    <li>{{ highlight }}</li>
                                {% endfor %}
                            </ul>
                        {% endfor %}
                    </div>
                {% endfor %}
                <h2 id="skills" tabindex="-1">Skills
                    <a class="header-anchor" href="#skills" aria-label="Link to this section">
                        <i class="icon-link" aria-hidden="true"></i>
                    </a>
                </h2>
                <ul>
                    <li>
                        <b>Backend</b>: Node JS, AWS Elastic Beanstalk, AWS Lambda functions, Google Cloud Functions, Architect, PHP, REST API</li>
                    <li>
                        <b>Frontend</b>: React JS, Redux, Javascript, 11ty, HTML5, CSS3, SASS</li>
                    <li>
                        <b>CMS</b>: Netlify CMS, Sanity.io, WordPress, Joomla</li>
                    <li>
                        <b>Workflow</b>: Git, GitFlow, AWS CLI, Webpack, Unix shell</li>
                    <li>
                        <b>Languages</b>: Italian, English</li>
                </ul>
                <h2 id="education" tabindex="-1">Education
                    <a class="header-anchor" href="#education" aria-label="Link to this section">
                        <i class="icon-link" aria-hidden="true"></i>
                    </a>
                </h2>
                <p>
                    <b>High School Diploma</b>, Liceo Classico Giuseppe Manno, Alghero (SS), 2003 – 2008, GPA: 96/100</p>
            </div>
        </article>
    </main>
    {% include "layouts/partials/reading-progress-indicator.njk" %}
    {% set readingProgressIndicator %}
    {% include "src/scripts/readingProgressIndicator.js" %}
    {% endset %}
    <script>
        {{ readingProgressIndicator | jsmin | safe }}</script>
{% endblock %}</li></li></li>