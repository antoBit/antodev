    {% include "layouts/partials/head.njk" %}
    <body>
        <div class="doc__bg"></div>
        {% include "layouts/partials/blog-nav.njk" %}    
        <div class="wrapper">
            <aside class="doc__nav">
            <ul>
                <li class="js-btn selected">February 2021</li>
            </ul>
            </aside>
            <article class="doc__content">
            {% for post in collections.posts %}
            <section class="js-section">
                <h3 class="section__title"><a href="{{ post.url | url }}" aria-label="{{ post.dara.title }}">{{ post.data.title }}</a></h3>
                <span>{{ post.data.date | readableDate }}</p>
                <p>{{ post.data.description }}</p>
            </section>
            {% endfor %}
            </article>
        </div>
        {% include "layouts/partials/footer.njk" %}
    </body>
</html>