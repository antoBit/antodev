{% set bodyClass = "post" %}
{% extends "layouts/base.njk" %}
{% block mainContent %}  
<div class="wrapper blog post">
    <article>
        <section class="post">
            <div class="post__title">
                <h1>{{ title }}</h1>
                <div class="post__reading_time">
                    <p>{{ content | timeToRead }} ⏱️</p>
                </div>
            </div>
            <div class="post__content">
                {{ content | safe }}
            </div>
            <div class="post__tags">
                {% for tag in tags %}
                <p><a class="gradient gradient_{{ range(1, 3) | random  }}" href="/tags/{{tag}}" aria-label="Category {{ tag }}">#{{ tag }}</a></p>
                {% endfor %}
            </div>
        </section>
    </article>
</div>
{% endblock %}