<h2 class="w-full text-lg" id="experience" tabindex="-1">Experience
    <a class="header-anchor" href="#experience" aria-label="Link to this section">
        <i class="icon-link" aria-hidden="true"></i>
    </a>
</h2>
{% for work in resume.work %}
    <section class="w-full">
        <p class="inline-block bg-background_dark font-mono text-xl font-medium py-1 px-3 rounded-lg">
            <span class="gradient bg-gradient-{{ range(1, 3) | random }} bg-clip-text">{{ work.company }}</span>
        </p>
        {% for experience in work.experience %}
            <div class="flex flex-row items-center justify-between border-b border-dashed border-accent my-4 pb-4">
                <p class="my-0">{{ experience.position }}</p>
                <div class="text-right">
                    <p class="text-xs my-0 italic">{{ work.location }}</p>
                    <p class="text-xs text-accent_alt my-0">{{ experience.startDate }} â€“ {{ experience.endDate }}</p>
                </div>
            </div>
            <ul class="list-disc pl-6">
                {% for highlight in experience.highlights %}
                    <li>{{ highlight }}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </section>
{% endfor %}