<li>
    <article class="group relative flex flex-col h-full justify-start bg-background_light rounded-lg py-4 px-8 cursor-pointer
            hover:bg-background_lighter">
        <a href="{{ post.url | url }}" aria-label="Read more about {{ post.data.title }}" class="group-hover:text-accent">
            <h2 class="font-serif text-xl leading-9 mt-2 mb-8">{{ post.data.title }}</h2>
        </a>
        <p class="text-sm mb-6">{{ post.data.description }}</p>
        <div class="flex flex-wrap items-center justify-between mt-auto">
            {% if post.data.tags %}
                <div class="flex gap-2">
                    {% if not ('/tags' in page.url) %}
                        {% for tag in post.data.tags.slice(0, 2) %}
                            <a
                                class="bg-background_dark text-sm font-mono font-medium py-1 px-3 rounded-full"
                                href="/tags/{{ tag }}"
                                aria-label="Category {{ tag }}">
                                <span class="gradient bg-gradient-{{ range(1, 3) | random }} bg-clip-text">#{{ tag }}</span>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endif %}
            <a href="{{ post.url | url }}" aria-label="Read more about {{ post.data.title }}" class="w-6 text-base group-hover:text-accent group-hover:animate-shake animate-thrice animate-duration-1000">
                <i class="icon-arrow_forward inline-block group-hover:animate-rubberBand text-lg" aria-hidden="true"></i>
            </a>
        </div>
    </article>
</li>